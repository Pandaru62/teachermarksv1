{% extends 'base.html.twig' %}

{% block title %}Teachermarks - {{ selectedClass.name }} {% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column justify-content-center">
        <div class="bg-secondary bg-opacity-25 m-5 p-3 rounded-3">
            <div class="d-flex flex-column justify-content-around align-items-center">
                <h2>Classe: <span class="p-1 rounded-2 fw-bolder" style="background-color: {{selectedClass.color}}">{{ selectedClass.name }}</span></h2>
                <a href="/addstudent" class="btn btn-success mt-2"><i class="bi bi-person-add"></i> Ajouter un élève</a>
            </div>
            <h5>Effectif : {{students|length}} </h5>

            <div class="table-responsive">
                <table class="table table-hover mt-3 table align-middle text-center">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Voir</th>
                            <th scope="col">Editer</th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for student in students %}
                        <tr class="">
                            <td>{{ student.lastname }}</td>
                            <td>{{ student.firstname }} </td>
                            <td><a href="/showstudent{{ student.id }}" class="btn btn-success"><i class="bi bi-eye"></i></a></td>
                            <td><a href="/editstudent/{{ student.id }}" class="btn btn-primary"><i class="bi bi-pencil"></i></a></td>
                        </tr>
    
                    {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>
    </div>
{% endblock %}

