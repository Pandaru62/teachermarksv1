{% extends "base.html.twig" %}

{% block body %}

<div class="container-fluid d-flex flex-column justify-content-center">

    <div class="bg-secondary bg-opacity-25 m-lg-5 p-3 rounded-3 text-center">
        <h2 class="my-3">Mes classes actives :</h2>
        
        <div class="d-flex flex-wrap justify-content-around mb-3">
            {% for class in activeClasses %}
                <div class="list-group text-center p-2">
                    <a href="/class/{{class.id}}" class="list-group-item list-group-item-action active text-{{ classTextColor[class.name] }} fw-bolder"  style="background-color:{{class.color}} "aria-current="true">
                        {{class.name}}
                    </a>
                    <a href="/addstudent" class="list-group-item list-group-item-action"><i class="bi bi-plus-circle-fill"></i> Ajouter un élève</a>
                    <a href="/addmanystudents/{{class.id}}" class="list-group-item list-group-item-action"><i class="bi bi-plus-circle-fill"></i> Ajout multiple d'élèves</a>
                    <a href="/editclass/{{class.id}}" class="list-group-item list-group-item-action"><i class="bi bi-pencil"></i> Editer la classe</a>
                    <a href="/archiveclass/{{class.id}}" class="list-group-item list-group-item-action"><i class="bi bi-archive"></i> Archiver la classe</a>
                </div>
            {% endfor %}

        </div>

        <a href="/addclass" class="btn btn-success btn-lg"><i class="bi bi-plus-circle-fill"></i> Ajouter une classe</a>

    
    </div>

    <div class="bg-secondary bg-opacity-25 mx-5 p-3 mb-3 rounded-3 text-center">

        <h2 class="my-3"><i class="bi bi-archive-fill"></i> Mes classes archivées :</h2>
        
        <div class="d-flex flex-wrap justify-content-around mb-3">
            {% if(archivedClasses|length == 0) %}
                <p>Aucune classe n'est archivée.</p>
            {% else %}

            {% for class in archivedClasses %}
                <div class="list-group text-center p-2">
                    <a href="/class/{{class.id}}" class="list-group-item list-group-item-action active text-{{ classTextColor[class.name] }} fw-bolder"  style="background-color:{{class.color}} "aria-current="true">
                        {{class.name}}
                    </a>
                    <a href="/editclass/{{class.id}}" class="list-group-item list-group-item-action"><i class="bi bi-pencil"></i> Editer la classe</a>
                    <a href="/deleteclass/{{class.id}}" class="list-group-item list-group-item-action bg-danger text-light"><i class="bi bi-trash3"></i> Supprimer définitivement</a>
                </div>
            {% endfor %}

            {% endif %}

        </div>

    </div>
</div>
{% endblock %}